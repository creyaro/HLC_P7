FROM openjdk:21-slim

#Establece el directorio de trabajo en /app
WORKDIR /app

# Copia el archivo JAR construido en el directorio target a la imagen
COPY target/*.jar subjects-service.jar

# Expone el puerto 8761 (puerto predeterminado de Eureka)
EXPOSE 8763

# Comando para ejecutar la aplicaci√≥n cuando se inicie el contenedor
CMD ["java", "-jar", "subjects-service.jar"]